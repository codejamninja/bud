{
  "name": "@roots/bud",
  "version": "2.0.7",
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/bud"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": ["webpack"],
  "engines": {
    "node": ">=12"
  },
  "files": ["lib/", "types/", "src/"],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index-esm.js"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:cjm": "tsc --build tsconfig.json",
    "build:ejm": "tsc --build tsconfig-ejs.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write",
    "prepublish": "clean:lib lint build pkg"
  },
  "devDependencies": {
    "@roots/bud-typings": "^2.0.6",
    "@types/compression-webpack-plugin": "^4.0.1",
    "@types/imagemin": "^7.0.0",
    "@types/webpack-dev-middleware": "^3.7.2"
  },
  "dependencies": {
    "@roots/bud-api": "^2.0.7",
    "@roots/bud-babel": "^2.0.7",
    "@roots/bud-build": "^2.0.7",
    "@roots/bud-cache": "^2.0.7",
    "@roots/bud-cli": "^2.0.7",
    "@roots/bud-compiler": "^2.0.7",
    "@roots/bud-extensions": "^2.0.7",
    "@roots/bud-framework": "^2.0.7",
    "@roots/bud-hooks": "^2.0.6",
    "@roots/bud-imagemin": "^2.0.7",
    "@roots/bud-postcss": "^2.0.7",
    "@roots/bud-server": "^2.0.7",
    "@roots/bud-support": "^2.0.6",
    "@roots/container": "^2.0.6",
    "@roots/dependencies": "^2.0.6",
    "@roots/filesystem": "^2.0.6",
    "autodll-webpack-plugin": "^0.4.2",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^6.0.2",
    "copy-webpack-plugin": "^6.2.0",
    "css-loader": "^3.6.0",
    "file-loader": "^6.0.0",
    "html-webpack-harddisk-plugin": "^1.0.2",
    "html-webpack-plugin": "^4.4.1",
    "ignore-emit-webpack-plugin": "^2.0.3",
    "img-loader": "^3.0.0",
    "mini-css-extract-plugin": "^0.11.3",
    "mini-svg-data-uri": "^1.2.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "raw-loader": "^4.0.1",
    "resolve-url-loader": "^3.1.1",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.2.2",
    "thread-loader": "^3.0.1",
    "url-loader": "^4.1.0",
    "webpack-config-dump-plugin": "^3.0.1",
    "webpack-manifest-plugin": "^2.2.0",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
