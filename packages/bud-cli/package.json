{
  "name": "@roots/bud-cli",
  "description": "CLI tools for Bud.",
  "version": "2.0.7",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/bud-cli"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": ">=12"
  },
  "keywords": ["webpack", "bud"],
  "files": [
    "lib",
    "types",
    "bin",
    "src"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index-esm.js"
  },
  "bin": {
    "bud": "bin/bud.js"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:cjm": "tsc --build tsconfig.json",
    "build:ejm": "tsc --build tsconfig-ejs.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write",
    "prepublish": "clean:lib lint build pkg"
  },
  "dependencies": {
    "@roots/bud-support": "^2.0.7",
    "@roots/ink-prettier": "^2.0.7",
    "@roots/ink-use-style": "^2.0.7",
    "@roots/dependencies": "^2.0.7",
    "current-git-branch": "^1.1.0",
    "git-rev-sync": "^3.0.1",
    "ink": "^3.0.0-6",
    "ink-gradient": "^2.0.0",
    "ink-link": "^2.0.0",
    "ink-spinner": "^4.0.0-0",
    "ink-table": "^3.0.0",
    "ink-use-stdout-dimensions": "^1.0.5",
    "patch-console": "^1.0.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dev-utils": "^10.2.1",
    "react-dom": "^16.13.1",
    "swr": "^0.3.9"
  },
  "devDependencies": {
    "@roots/bud-typings": "^2.0.7",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.50"
  }
}
