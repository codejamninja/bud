{
  "name": "@roots/bud-support",
  "version": "2.0.6",
  "description": "Internal utilities for the @roots/bud monorepo.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/bud-support"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": ["bud", "webpack"],
  "engines": {
    "node": ">=12"
  },
  "files": ["lib/", "src/", "publish/"],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index-esm.js"
  },
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "build": "run-s build:*",
    "build:cjs": "tsc --build tsconfig.json",
    "build:ejm": "tsc --build tsconfig-ejs.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:types": "rimraf ./types",
    "clean:modules": "rimraf ./node_modules",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write",
    "prepublish": "clean:lib lint build pkg"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "execa": "^4.0.3",
    "find-up": "^5.0.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "lodash": "^4.17.20",
    "node-notifier": "^8.0.0",
    "react-dev-utils": "^11.0.1",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  }
}
