{
  "name": "@roots/bud-babel",
  "version": "2.0.7",
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/extension-babel"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/",
    "types/",
    "src/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index-esm.js"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "run-s build:*",
    "build:cjm": "tsc --build tsconfig.json",
    "build:ejm": "tsc --build tsconfig-ejs.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write",
    "prepublish": "clean:lib lint build pkg"
  },
  "dependencies": {
    "@babel/core": "^7.11.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@roots/bud-support": "^2.0.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.4"
  },
  "devDependencies": {
    "@roots/bud-extensions": "^2.0.7",
    "@roots/bud-typings": "^2.0.6",
    "webpack": "^4.44.2"
  }
}
