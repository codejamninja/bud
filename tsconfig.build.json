{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "declarationDir": "./lib/types",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["esnext", "es5", "es6"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "noLib": false,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
  },
  "exclude": ["docs", "node_modules"]
}
