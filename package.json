  "scripts": {
    "make": "run-s clean install build",
    "clean": "lerna clean -y",
    "install": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier packages/**/*.{js,ts,tsx,json,md} --ignore-path='packages/**/package.json' --write",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -u",
    "release:next": "lerna publish --ignore-scripts --dist-tag next",
    "release:next:pre": "lerna publish prerelease --ignore-scripts --pre-dist-tag next",
    "release:latest": "lerna publish --ignore-scripts",
    "release:latest:pre": "lerna publish --ignore-scripts --pre-dist-tag rc",
    "test": "jest --verbose"
  },
