{
  "name": "bud-monorepo",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": "14.9.0"
  },
  "scripts": {
    "make": "run-s clean install build",
    "clean": "lerna clean -y",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier packages/**/*.{js,ts,tsx,json,md} --ignore-path='packages/**/package.json' --write",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -u",
    "release:next": "lerna publish --ignore-scripts --dist-tag next",
    "release:next:pre": "lerna publish prerelease --ignore-scripts --pre-dist-tag next",
    "release:latest": "lerna publish --ignore-scripts",
    "release:latest:pre": "lerna publish --ignore-scripts --pre-dist-tag rc",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "commitizen": "^4.1.5",
    "conventional-changelog-cli": "^2.1.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.3.0",
    "ink-testing-library": "^2.0.1",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^15.8.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@roots/bud": "file:packages/bud",
    "@roots/bud-cli": "file:packages/bud-cli",
    "@roots/bud-compiler": "file:packages/bud-compiler",
    "@roots/bud-dependency-extraction-webpack-plugin": "file:packages/bud-dependency-extraction-webpack-plugin",
    "@roots/bud-eslint": "file:packages/bud-eslint",
    "@roots/bud-framework": "file:packages/bud-framework",
    "@roots/bud-purgecss": "file:packages/bud-purgecss",
    "@roots/bud-react": "file:packages/bud-react",
    "@roots/bud-sass": "file:packages/bud-sass",
    "@roots/bud-server": "file:packages/bud-server",
    "@roots/bud-stylelint": "file:packages/bud-stylelint",
    "@roots/bud-support": "file:packages/bud-support",
    "@roots/bud-tailwindcss": "file:packages/bud-tailwindcss",
    "@roots/bud-typescript": "file:packages/bud-typescript",
    "@roots/bud-vue": "file:packages/bud-vue",
    "@roots/bud-wordpress-manifests": "file:packages/bud-wordpress-manifests",
    "@roots/container": "file:packages/container",
    "@roots/dependencies": "file:packages/dependencies",
    "@roots/filesystem": "file:packages/filesystem"
  }
}
